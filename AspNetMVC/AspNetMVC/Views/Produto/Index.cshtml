@model IList<AspNetMVC.Models.Produto>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Lista de Produtos</h3>
                </div>
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nome</th>
                                <th>Quantidade</th>
                                <th align="center">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var produto in Model)
                            {
                                <tr>
                                    <td>@produto.Id</td>
                                    <td>
                                        @Html.RouteLink(produto.Nome, "VisualizaProduto", new { id = produto.Id })
                                    </td>
                                    <td>@produto.Quantidade</td>
                                    <td align="center">
                                        <button type="button" class="btn btn-primary" data-toggle="tooltip" title="Visualizar"><i class="fa fa-file"></i></button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>